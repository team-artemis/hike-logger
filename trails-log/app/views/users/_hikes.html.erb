<% if @user.id == current_user.id %>
	<li class="cssmenu <%= @user.id %> and <%= current_user.id %>">
		<h2> My hikes </h2>
	</li>

	<% @trails.each do |trail| %>
	<li class="cssmenu trailtitle"><a href=""><span>
		<b><%= trail.title %></b><br>
		<%= reverse_geocode(trail.trailhead_lat, trail.trailhead_lon) %>
	</span></a></li>
	<% end %>
<% else %>
	<li class="cssmenu">
		<h2> <%= @user.firstname %>'s hikes </h2>
	</li>
	
	<% @user.trails.each do |trail| %>
	<li class="cssmenu trailtitle">
		<a href="">
			<span>
				<b>
					<%= trail.title %>
				</b>
				<br>
				<%= reverse_geocode(trail.trailhead_lat, trail.trailhead_lon) %>
			</span>
		</a>
	</li>
	<% end %>
<% end %>