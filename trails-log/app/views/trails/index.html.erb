<p id="notice"><%= notice %></p>

<h1>Listing Trails</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Length</th>
      <th>Duration</th>
      <th>Difficulty</th>
      <th>Review</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.title %></td>
        <td><%= trail.length %></td>
        <td><%= trail.duration %></td>
        <td><%= trail.difficulty %></td>
        <td><%= trail.review %></td>
        <td><%= trail.rating %></td>
        <td><%= link_to 'Show', trail %></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

